<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/wallet_dim_foreground_holo_dark"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar"
            ></include>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_vertical" >


        <!-- only on layout host scroll view -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/design_layouts"
            android:orientation="vertical">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25dp"
            android:text="Farm Advisory"
            android:id="@+id/textView52" />


            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical">

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:text="Basal Dose Application"
            android:id="@+id/textView5" />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:text="You need to add basal dose to your crop in these quantities"
            android:id="@+id/textView10" />


        <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />



        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/white"
            >
            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/fsdfsdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    android:typeface="serif"
                    android:text="Applied(KG/Hectare)" />

                <android.widget.Space
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
                <TextView
                    android:id="@+id/fsdfswerwedf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    android:typeface="serif"
                    android:text="Ideal(KG/Hectare)" />


            </LinearLayout>
            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="18"

                >

                <TextView
                    android:id="@+id/N"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="left"
                    android:textColor="@android:color/black"
                    android:typeface="serif"

                     android:layout_gravity="center_vertical"
                    android:text="N" />
                <android.widget.Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />


                <EditText
                    android:id="@+id/appliedBaselDoseN"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="7"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/line"
                    />
                <android.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="2"
                    />



                <EditText
                    android:id="@+id/idealBaselDoseN"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:layout_weight="7"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/line"
                    />



            </LinearLayout>

            <android.widget.Space
                android:layout_width="3dp"
                android:layout_height="3dp" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="18"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:typeface="serif"
                    android:layout_gravity="center_vertical"
                    android:text="P" />
                <android.widget.Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />
                <EditText
                    android:id="@+id/appliedBaselDoseP"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="7"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/line"
                    />

                <android.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="2"/>
                <EditText
                    android:id="@+id/idealBaselDoseP"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="7"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/line"
                    />


            </LinearLayout>

            <android.widget.Space
                android:layout_width="3dp"
                android:layout_height="3dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="18"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:typeface="serif"
                    android:layout_gravity="center_vertical"
                    android:text="K" />


                <android.widget.Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:id="@+id/appliedBaselDoseK"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="7"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/line"
                    />
                <android.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="2"/>

                <EditText
                    android:id="@+id/idealBaselDoseK"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="7"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:background="@drawable/line"
                    />


            </LinearLayout>
            <android.widget.Space
                android:layout_width="16dp"
                android:layout_height="16dp" />

        </LinearLayout>

            <android.widget.Space
                android:layout_width="16dp"
                android:layout_height="16dp" />

        </LinearLayout>

        <android.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />
        <!--  8888888888888888888888888888888888888888888888888888888888888888888888888888888888888888888888888888 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20dp"
                    android:text=" Ideal Crop Duration"
                    android:id="@+id/textView3"
                   />

                    <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                  />

                 <TextView
                    android:id="@+id/textView"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                     android:background="@drawable/line"
                    android:textSize="15dp"
                     android:paddingTop="10dp"
                     android:paddingLeft="5dp"
                    android:textStyle="bold"

                    />

            </LinearLayout>
            <android.widget.Space
                android:layout_width="16dp"
                android:layout_height="16dp" />


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="5dp"
    android:orientation="vertical">

    <android.widget.Space
        android:layout_width="16dp"
        android:layout_height="16dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:text="Apply these micronutrients on your crop"
            android:id="@+id/textView20" />

    <android.widget.Space
        android:layout_width="16dp"
        android:layout_height="16dp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </ListView>


        </LinearLayout>
            <android.widget.Space
                android:layout_width="16dp"
                android:layout_height="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
