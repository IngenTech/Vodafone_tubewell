<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="1dp">

            <RelativeLayout
                android:id="@+id/fromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/date1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:gravity="center"
                        android:hint="From date"
                        android:padding="2dp"
                        android:textSize="12dp" />


                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/toDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">


                    <TextView

                        android:id="@+id/date2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:gravity="center"
                        android:hint="To date"
                        android:padding="2dp"
                        android:textSize="12dp" />


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/status_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">


                    <Spinner
                        android:id="@+id/status_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:gravity="center"
                        android:padding="2dp"
                        android:textSize="12dp" />


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/search_history_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="7dp"
            android:background="@drawable/button_background"
            android:text="@string/search"
            android:textColor="#ffffff" />


    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/searched_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ttttt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp">

                <View
                    android:id="@+id/a12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/dsaas"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/a12"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phone_no_report"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Phone No."
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/name_report"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Name"
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />


                    <TextView
                        android:id="@+id/location_report"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Location"
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Conversation"
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:padding="2dp"
                        android:text="ResolutionType"
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />


                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Crop"
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="130sp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Resolve User"
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="90sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Status"
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="RequestDate"
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="ResolveDate"
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="SentDate"
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="PendingDate"
                        android:textColor="@color/green_alert"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/dsaas"
                    android:background="@color/gray" />

            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/report_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ttttt"
                android:layout_margin="2dp"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/nodata"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No Data Found"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>

</RelativeLayout>