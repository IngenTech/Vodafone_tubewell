<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dsaas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone_row"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="2dp"
            android:text="Phone No."
            android:textColor="#000000"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/name_row"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="2dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />


        <TextView
            android:id="@+id/location_row"
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="2dp"
            android:text="Location"
            android:textColor="#000000"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />



        <TextView
            android:id="@+id/conversation_row"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Conversation"
            android:singleLine="false"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:textColor="#000000"
            android:textSize="13sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/resolutiontype_row"
            android:layout_width="110dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="2dp"
            android:text="ResolutionType"
            android:textColor="#000000"
            android:textSize="13sp"/>


        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/crop_row"
            android:layout_width="90dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="2dp"
            android:text="Crop"
            android:textColor="#000000"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/resolveuser_row"
            android:layout_width="130sp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="2dp"
            android:text="ResolveUser"
            android:textColor="#000000"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/status_row"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="Status"
            android:textColor="#000000"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/requestdate_row"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="RequestDate"
            android:textColor="#000000"
            android:textSize="13sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/resolvedate_row"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="ResolveDate"
            android:textColor="#000000"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/senddate_row"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="SentDate"
            android:textColor="#000000"
            android:textSize="13sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/pendingdate_row"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="PendingDate"
            android:textColor="#000000"
            android:textSize="13sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray" />

</LinearLayout>