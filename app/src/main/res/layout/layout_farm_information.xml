<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ColorPrimary">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        ></include>

</LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/design_layouts"
            >



            <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:typeface="serif"
                android:text="Farm Information" />

                <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@android:color/white"

                >
                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"

                android:typeface="serif"
                android:text="Please enter basic information about farm" />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/formTextSize"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:typeface="serif"
                android:text="Name" />

            <EditText
            android:id="@+id/farmName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
                android:background="@drawable/line"
               android:padding="5dp"
            android:hint="Enter Farm Name" />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/formTextSize"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:typeface="serif"
                android:text="Crop" />

            <Spinner
                android:id="@+id/crop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/line"
                android:hint=" " />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/formTextSize"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:typeface="serif"
                android:text="Variety" />

            <Spinner
                android:id="@+id/variety"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/line"

                android:hint=" " />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/formTextSize"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:typeface="serif"
                android:text="Sow Period Form" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="date"
                android:ems="10"
                android:background="@drawable/line"
                android:id="@+id/editTextShowPeriodFrom"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:layout_weight="1" />



            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/formTextSize"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:typeface="serif"

                android:text="Sow Period To" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="date"
                android:ems="10"
                android:padding="5dp"
                android:id="@+id/editTextShowPeriodTo"
                android:focusable="false"
                android:layout_gravity="center_vertical"
                android:background="@drawable/line"
                android:layout_weight="1" />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/formTextSize"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:typeface="serif"
                android:text="Have You applied basal dose to your crop?" />

            <Spinner
                android:id="@+id/basalDose"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/line"
                android:hint=" " />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />




                <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/line"
                android:visibility="gone">


                    <TextView
                        android:id="@+id/fillBasalDose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/formTextSize"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:text="Please fill the basal dose table" />

                    <android.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />



                    <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/N"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/formTextSize"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:padding="5dp"
                        android:text="N" />
                    <android.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="5dp" />

                    <EditText
                        android:id="@+id/baselDoseTableN"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:background="@drawable/line"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                         />

                    <android.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="5dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/formTextSize"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:text="KG/Hectare" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="3dp"
                    android:layout_height="3dp" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/formTextSize"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:typeface="serif"
                        android:text="P" />
                    <android.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="5dp" />
                    <EditText
                        android:id="@+id/baselDoseTableP"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:background="@drawable/line"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        />

                    <android.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="5dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/formTextSize"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:text="KG/Hectare" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="3dp"
                    android:layout_height="3dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/formTextSize"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:padding="5dp"
                        android:text="K" />
                    <android.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="5dp" />
                    <EditText
                        android:id="@+id/baselDoseTableK"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:background="@drawable/line"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                         />
                    <android.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="5dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/formTextSize"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:text="KG/Hectare" />

                </LinearLayout>
                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/nutrition_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/formTextSize"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:text="Which nutrition have you applied on your farm" />
                <android.widget.Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:id="@+id/nutrition"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/line"
                    android:padding="5dp"
                    android:hint=" Enter Nutrition" />

            </LinearLayout>



            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/formTextSize"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:typeface="serif"
                android:text="What is your main concern ?" />

            <Spinner
                android:id="@+id/yourConcern"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/line"
                android:hint=" " />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />



            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:background="@drawable/button_background"
                android:layout_gravity="left"

                android:text="Submit" />
                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />
            </LinearLayout>
            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>
